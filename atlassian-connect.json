{
  "key": "linked-issues-validator",
  "name": "Linked Issues Validator",
  "baseUrl": "http://localhost:3000",
  "authentication": {
    "type": "none"
  },
  "scopes": [ "READ", "WRITE", "ADMIN" ],
  "modules": {
    "jiraWorkflowValidators": [
      {
        "key": "linked-issues-match-jql",
        "name": {
          "value": "Any linked issue matches JQL"
        },
        "description": {
          "value": "Blocks the transition unless at least one linked issue satisfies the JQL you supply."
        },
        "url": "/validate", 
        "function": "validate-handler",
        "configurationUrl": "/create.html",
        "view": {
          "url": "/view.html"
        },
        "errorMessage": {
          "value": "No linked issues match the configured JQL query."
        },
        "expression": "true"
      }
    ]
  }
}